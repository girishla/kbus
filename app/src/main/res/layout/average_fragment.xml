<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Total expense -->
    <RelativeLayout
        android:id="@+id/average_fragment_total_relative_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_medium"

        android:gravity="center">

        <!-- Total of progress bar -->
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_circle_solid_white"
                android:layout_centerInParent="true"/>

            <!-- Percentage -->
            <TextView
                android:id="@+id/average_fragment_total_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:text="0%"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:gravity="center"/>

            <!-- Total label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average_fragment_total_text_view_id"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"

                android:text="@string/total"/>

            <ProgressBar
                android:id="@+id/average_fragment_total_progressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"

                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/average_fragment_weekly_monthly_linear_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/average_fragment_total_relative_layout_id"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <!-- Weekly expense -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_small">

            <!-- Weekly of progress bar -->
            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_circle_solid_white"
                    android:layout_centerInParent="true"/>

                <!-- Percentage -->
                <TextView
                    android:id="@+id/average_fragment_weekly_circular_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:text="0%"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/average_fragment_weekly_circular_progress_text"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="weekly ave"/>

                <ProgressBar
                    android:id="@+id/average_fragment_weekly_progressBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:background="@drawable/circle_shape"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/average_fragment_weekly_total_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_really_small"

                android:text="$0"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/average_fragment_weekly_label_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="week"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <!-- Monthly expense -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_small">

            <!-- Example of progress bar -->
            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_circle_solid_white"
                    android:layout_centerInParent="true"/>

                <!-- Percentage -->
                <TextView
                    android:id="@+id/average_fragment_monthly_circular_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:text="0%"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/average_fragment_monthly_circular_progress_text"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="monthly ave"/>

                <ProgressBar
                    android:id="@+id/average_fragment_monthly_progressBar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"

                    android:indeterminate="false"
                    android:progressDrawable="@drawable/circular_progress_bar"
                    android:background="@drawable/circle_shape"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="0" />

            </RelativeLayout>

            <TextView
                android:id="@+id/average_fragment_monthly_total_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_really_small"

                android:text="$0"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/average_fragment_monthly_label_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="month"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>