<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_expense_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    tools:context="com.expensemanager.app.expense.NewExpenseActivity">

    <include layout="@layout/toolbar_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_id">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Amount label -->
            <TextView
                android:id="@+id/new_expense_activity_amount_label_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginBottom="@dimen/space_medium"

                android:paddingLeft="@dimen/space_really_small"
                android:paddingRight="@dimen/space_really_small"
                android:text="@string/amount"
                android:textSize="@dimen/text_small"/>

            <!-- Amount -->
            <EditText
                android:id="@+id/new_expense_activity_amount_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_expense_activity_amount_label_text_view_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"

                android:padding="@dimen/space_really_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_small"
                android:background="@drawable/background_bottom_line_gray"/>

            <!-- Category label -->
            <TextView
                android:id="@+id/new_expense_activity_category_label_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_expense_activity_amount_text_view_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginBottom="@dimen/space_medium"

                android:paddingLeft="@dimen/space_really_small"
                android:paddingRight="@dimen/space_really_small"
                android:text="@string/category"
                android:textSize="@dimen/text_small"/>

            <!-- Category info -->
            <RelativeLayout
                android:id="@+id/new_expense_activity_category_relative_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_below="@+id/new_expense_activity_category_label_text_view_id"

                android:padding="@dimen/space_medium"
                android:background="@drawable/background_round_corner_border_gray">

                <!-- Color -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/new_expense_activity_category_color_image_view_id"
                    android:layout_width="@dimen/category_color_width_small"
                    android:layout_height="@dimen/category_color_width_small"
                    android:layout_marginEnd="@dimen/space_medium"/>

                <!-- Name -->
                <TextView
                    android:id="@+id/new_expense_activity_category_name_text_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/new_expense_activity_category_color_image_view_id"
                    android:layout_alignTop="@+id/new_expense_activity_category_color_image_view_id"
                    android:layout_alignBottom="@+id/new_expense_activity_category_color_image_view_id"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium_small"
                    android:gravity="center_vertical"
                    tools:text="name"/>

                <!-- Amount -->
                <TextView
                    android:id="@+id/new_expense_activity_category_amount_text_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/new_expense_activity_category_name_text_view_id"
                    android:layout_alignBottom="@+id/new_expense_activity_category_name_text_view_id"

                    android:textColor="@color/black"
                    android:textSize="@dimen/text_really_small"
                    android:gravity="center_vertical"
                    tools:text="1234"/>

            </RelativeLayout>

            <!-- Category hint -->
            <TextView
                android:id="@+id/new_expense_activity_category_hint_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_alignTop="@+id/new_expense_activity_category_relative_layout_id"
                android:layout_alignBottom="@+id/new_expense_activity_category_relative_layout_id"

                android:gravity="center"
                android:padding="@dimen/space_really_small"
                android:hint="@string/no_category"
                android:textColorHint="@color/gray_light"
                android:textSize="@dimen/text_small"
                android:background="@drawable/background_round_corner_border_gray"/>

            <!-- Expense date and time label -->
            <TextView
                android:id="@+id/new_expense_activity_date_time_label_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_expense_activity_category_relative_layout_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginBottom="@dimen/space_medium"

                android:paddingLeft="@dimen/space_really_small"
                android:paddingRight="@dimen/space_really_small"
                android:text="@string/expense_date"
                android:textSize="@dimen/text_small"/>

            <!-- Expense date and time -->
            <LinearLayout
                android:id="@+id/new_expense_activity_date_time_linear_layout_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_below="@+id/new_expense_activity_date_time_label_text_view_id"

                android:weightSum="2"
                android:orientation="horizontal">

                <!-- Date -->
                <TextView
                    android:id="@+id/new_expense_activity_expense_date_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_small"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/space_really_small"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:background="@drawable/background_round_corner_border_gray"
                    tools:text="Date"/>

                <!-- Time -->
                <TextView
                    android:id="@+id/new_expense_activity_expense_time_text_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_small"

                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/space_really_small"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/black"
                    android:background="@drawable/background_round_corner_border_gray"
                    tools:text="Time"/>

            </LinearLayout>

            <!-- Note label -->
            <TextView
                android:id="@+id/new_expense_activity_note_label_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_expense_activity_date_time_linear_layout_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginBottom="@dimen/space_medium"

                android:paddingLeft="@dimen/space_really_small"
                android:paddingRight="@dimen/space_really_small"
                android:text="@string/note"
                android:textSize="@dimen/text_small"/>

            <!-- Note -->
            <EditText
                android:id="@+id/new_expense_activity_note_text_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_expense_activity_note_label_text_view_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"

                android:padding="@dimen/space_really_small"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_small"
                android:background="@drawable/background_bottom_line_gray"/>

            <!-- Expense photo -->
            <LinearLayout
                android:id="@+id/new_expense_activity_linear_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_expense_activity_note_text_view_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large">

                <GridView
                    android:id="@+id/new_expense_activity_grid_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:columnWidth="84dp"
                    android:numColumns="auto_fit"
                    android:gravity="center" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/progress_bar" />

</RelativeLayout>
