<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/expense_photo_fragment_view_pager_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_medium_small"/>

    <LinearLayout
        android:id="@+id/expense_photo_fragment_pager_indicator_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_medium_large"

        android:gravity="center_horizontal" />

    <!-- Close icon -->
    <ImageView
        android:id="@+id/expense_photo_fragment_close_image_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:paddingLeft="10dp"
        android:paddingTop="@dimen/space_medium_large"
        android:src="@drawable/ic_window_close"
        android:tint="@color/colorAccent"
        android:background="@android:color/transparent"/>

</RelativeLayout>