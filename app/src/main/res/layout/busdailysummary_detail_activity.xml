<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimaryDark"
    tools:context="com.expensemanager.app.tripsheet.BusDailySummaryDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/android:colorPrimary"
        android:elevation="6dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Back -->
            <ImageView
                android:id="@+id/toolbar_back_image_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:padding="10dp"
                android:tint="?attr/android:actionMenuTextColor"
                android:src="@drawable/ic_arrow_left_24dp"/>

            <!-- Extra image -->
            <ImageView
                android:id="@+id/toolbar_extra_image_view_id"
                android:layout_width="@dimen/category_color_width_small"
                android:layout_height="@dimen/category_color_width_small"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/toolbar_back_image_view_id"
                android:layout_marginEnd="10dp"

                android:visibility="gone"
                tools:src="@drawable/ic_arrow_back_white_24dp"/>

            <!-- Title -->
            <TextView
                android:id="@+id/toolbar_title_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/toolbar_extra_image_view_id"
                android:layout_centerVertical="true"

                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_small"/>

            <!-- Edit -->
            <TextView
                android:id="@+id/toolbar_edit_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/toolbar_title_text_view_id"
                android:layout_centerVertical="true"

                android:textColor="?attr/android:actionMenuTextColor"
                android:textSize="@dimen/text_medium_small"
                android:paddingEnd="10dp"
                android:text="@string/edit"
                android:visibility="invisible"/>

            <!-- Save -->
            <TextView
                android:id="@+id/toolbar_save_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/toolbar_title_text_view_id"
                android:layout_centerVertical="true"

                android:textColor="?attr/android:actionMenuTextColor"
                android:textSize="@dimen/text_medium_small"
                android:paddingEnd="10dp"
                android:text="@string/save"
                android:visibility="invisible"/>

            <!-- Right title -->
            <TextView
                android:id="@+id/toolbar_right_title_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_medium"

                android:textColor="?attr/android:actionMenuTextColor"
                android:textSize="@dimen/text_medium_small"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_id"
        android:scrollbars="none"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/busdailysummary_detail_activity_user_info_relative_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginLeft="@dimen/space_medium"
                android:layout_marginRight="@dimen/space_medium">

                <!-- User photo -->
                <ImageView
                    android:id="@+id/busdailysummary_detail_activity_user_photo_image_view_id"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="@dimen/space_medium"
                    android:layout_marginBottom="@dimen/space_medium"/>

                <!-- User name and email -->
                <LinearLayout
                    android:id="@+id/busdailysummary_detail_activity_linear_layout_title_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/busdailysummary_detail_activity_user_photo_image_view_id"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_fullname_text_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_horizontal"

                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small"
                        android:text="Girish Lakshmanan"/>

                    <com.busdailysummarymanager.app.helpers.ETextView
                        android:id="@+id/busdailysummary_detail_activity_email_text_view_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:textColor="@color/gray_really_light"
                        android:textSize="@dimen/text_small"/>

                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/busdailysummary_detail_activity_card_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_medium_small"
                android:layout_below="@+id/busdailysummary_detail_activity_user_info_relative_layout_id">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Amount label -->
                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_amount_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_marginTop="@dimen/space_medium_large"
                        android:layout_marginBottom="@dimen/space_medium"

                        android:paddingLeft="@dimen/space_really_small"
                        android:paddingRight="@dimen/space_really_small"
                        android:text="@string/amount"
                        android:textSize="@dimen/text_small"/>

                    <!-- Amount -->
                    <EditText
                        android:id="@+id/busdailysummary_detail_activity_amount_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/busdailysummary_detail_activity_amount_label_text_view_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"

                        android:padding="@dimen/space_really_small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium_small"
                        android:background="@drawable/background_bottom_line_gray"/>

                    <!-- Category label -->
                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_conductor_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/busdailysummary_detail_activity_amount_text_view_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_marginTop="@dimen/space_medium_large"
                        android:layout_marginBottom="@dimen/space_medium"

                        android:paddingLeft="@dimen/space_really_small"
                        android:paddingRight="@dimen/space_really_small"
                        android:text="@string/conductor"
                        android:textSize="@dimen/text_small"/>

                    <!-- Category info -->
                    <RelativeLayout
                        android:id="@+id/busdailysummary_detail_activity_conductor_relative_layout_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_below="@+id/busdailysummary_detail_activity_conductor_label_text_view_id"

                        android:padding="@dimen/space_medium"
                        android:background="@drawable/background_round_corner_border_gray">

                        <!-- Color -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_width="@dimen/category_color_width_small"
                            android:layout_height="@dimen/category_color_width_small"
                            android:layout_marginEnd="@dimen/space_medium"/>

                        <!-- Icon -->
                        <ImageView
                            android:id="@+id/busdailysummary_detail_activity_icon_image_view_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:layout_alignTop="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_alignBottom="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_alignStart="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_alignEnd="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"

                            android:tint="@color/white"
                            tools:src="@drawable/ic_security"/>

                        <!-- Name -->
                        <TextView
                            android:id="@+id/busdailysummary_detail_activity_conductor_name_text_view_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_alignTop="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"
                            android:layout_alignBottom="@+id/busdailysummary_detail_activity_conductor_color_image_view_id"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_medium_small"
                            android:gravity="center_vertical"
                            tools:text="name"/>

                        <!-- Amount -->
                        <TextView
                            android:id="@+id/busdailysummary_detail_activity_conductor_amount_text_view_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/busdailysummary_detail_activity_conductor_name_text_view_id"
                            android:layout_alignBottom="@+id/busdailysummary_detail_activity_conductor_name_text_view_id"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_really_small"
                            android:gravity="center_vertical"
                            tools:text="1234"/>

                    </RelativeLayout>

                    <!-- Category hint -->
                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_conductor_hint_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_alignTop="@+id/busdailysummary_detail_activity_conductor_relative_layout_id"
                        android:layout_alignBottom="@+id/busdailysummary_detail_activity_conductor_relative_layout_id"

                        android:gravity="center"
                        android:padding="@dimen/space_really_small"
                        android:hint="@string/no_conductor"
                        android:textColorHint="@color/gray_light"
                        android:textSize="@dimen/text_small"
                        android:background="@drawable/background_round_corner_border_gray"/>

                    <!-- Expense date and time label -->
                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_date_time_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/busdailysummary_detail_activity_conductor_relative_layout_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_marginTop="@dimen/space_medium_large"
                        android:layout_marginBottom="@dimen/space_medium"

                        android:paddingLeft="@dimen/space_really_small"
                        android:paddingRight="@dimen/space_really_small"
                        android:text="@string/busdailysummary_date"
                        android:textSize="@dimen/text_small"/>

                    <!-- Expense date and time -->
                    <LinearLayout
                        android:id="@+id/busdailysummary_detail_activity_date_time_linear_layout_id"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_below="@+id/busdailysummary_detail_activity_date_time_label_text_view_id"

                        android:weightSum="2"
                        android:orientation="horizontal">

                        <!-- Date -->
                        <TextView
                            android:id="@+id/busdailysummary_detail_activity_busdailysummary_date_text_view_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/space_small"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/space_really_small"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/black"
                            android:background="@drawable/background_round_corner_border_gray"
                            tools:text="Date"/>

                        <!-- Time -->
                        <TextView
                            android:id="@+id/busdailysummary_detail_activity_busdailysummary_time_text_view_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/space_small"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/space_really_small"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/black"
                            android:background="@drawable/background_round_corner_border_gray"
                            tools:text="Time"/>

                    </LinearLayout>

                    <!-- Note label -->
                    <TextView
                        android:id="@+id/busdailysummary_detail_activity_note_label_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/busdailysummary_detail_activity_date_time_linear_layout_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_marginTop="@dimen/space_medium_large"
                        android:layout_marginBottom="@dimen/space_medium"

                        android:paddingLeft="@dimen/space_really_small"
                        android:paddingRight="@dimen/space_really_small"
                        android:text="@string/note"
                        android:textSize="@dimen/text_small"/>

                    <!-- Note -->
                    <EditText
                        android:id="@+id/busdailysummary_detail_activity_note_text_view_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/busdailysummary_detail_activity_note_label_text_view_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"

                        android:padding="@dimen/space_really_small"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_medium_small"
                        android:background="@drawable/background_bottom_line_gray"/>

                    <!-- Expense photo -->
                    <LinearLayout
                        android:id="@+id/busdailysummary_detail_activity_linear_layout_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/busdailysummary_detail_activity_note_text_view_id"
                        android:layout_marginLeft="@dimen/space_medium_large"
                        android:layout_marginRight="@dimen/space_medium_large"
                        android:layout_marginTop="@dimen/space_medium_large"
                        android:layout_marginBottom="@dimen/space_medium_large">

                        <GridView
                            android:id="@+id/busdailysummary_detail_activity_grid_view_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:columnWidth="84dp"
                            android:numColumns="auto_fit"
                            android:gravity="center" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Add new busdailysummary photo -->
            <LinearLayout
                android:id="@+id/busdailysummary_detail_activity_new_photo_linear_layout_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busdailysummary_detail_activity_card_view_id"
                android:layout_marginLeft="@dimen/space_medium_large"
                android:layout_marginRight="@dimen/space_medium_large"
                android:layout_marginTop="@dimen/space_medium_large"
                android:layout_marginBottom="@dimen/space_medium_large">

                <GridView
                    android:id="@+id/busdailysummary_detail_activity_new_photo_grid_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="176dp"

                    android:columnWidth="84dp"
                    android:numColumns="auto_fit"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Delete -->
            <Button
                android:id="@+id/busdailysummary_detail_activity_delete_button_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/space_medium_large"
                android:layout_below="@+id/busdailysummary_detail_activity_new_photo_linear_layout_id"

                android:textSize="@dimen/text_small"
                android:textColor="@color/black"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:background="@drawable/button_background_white"/>

        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/busdailysummary_detail_activity_progress_bar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"/>

</RelativeLayout>

