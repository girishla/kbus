<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/drawer_padding"
    android:paddingBottom="@dimen/drawer_padding">

    <!-- divider label -->
    <TextView
        android:id="@+id/report_item_divider_hint_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:paddingStart="@dimen/space_medium_large"
        android:paddingEnd="@dimen/space_medium_large"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium_small"
        tools:text="@string/notification"/>

    <View
        android:id="@+id/report_item_divider_left_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/report_item_divider_hint_id"

        android:background="@drawable/divider_line_left"/>

    <View
        android:id="@+id/report_item_divider_right_id"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/report_item_divider_hint_id"

        android:background="@drawable/divider_line_right"/>
</RelativeLayout>
