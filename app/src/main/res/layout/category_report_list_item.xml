<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:gravity="center">

    <!-- Inner Color -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/category_report_list_item_color_image_view_id"
        android:layout_width="@dimen/category_color_width_small"
        android:layout_height="@dimen/category_color_width_small"
        android:layout_marginEnd="6dp"

        tools:background="@color/blue"/>

    <!-- Icon -->
    <ImageView
        android:id="@+id/category_report_list_item_icon_image_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_alignTop="@+id/category_report_list_item_color_image_view_id"
        android:layout_alignBottom="@+id/category_report_list_item_color_image_view_id"
        android:layout_alignStart="@+id/category_report_list_item_color_image_view_id"
        android:layout_alignEnd="@+id/category_report_list_item_color_image_view_id"

        android:tint="@color/white"
        tools:src="@drawable/ic_security"/>

</RelativeLayout>